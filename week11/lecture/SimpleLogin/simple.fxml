<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER"/>

    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" promptText="Enter your username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button text="Login" fx:id="loginButton" />
        <Button text="Cancel" fx:id="cancelButton"/>
    </HBox>

</GridPane>